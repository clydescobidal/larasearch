{
    "name": "clydescobidal/larasearch",
    "description": "A Laravel package that provides FULLTEXT index search functionality",
    "keywords": [
        "clydescobidal",
        "larasearch"
    ],
    "homepage": "https://github.com/clydescobidal/larasearch",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Clyde Escobidal",
            "email": "cleidoscope@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0 || ^8.1 || ^8.2",
        "illuminate/support": "*"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Clydescobidal\\Larasearch\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Clydescobidal\\Larasearch\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Clydescobidal\\Larasearch\\LarasearchServiceProvider"
            ]
        }
    }
}